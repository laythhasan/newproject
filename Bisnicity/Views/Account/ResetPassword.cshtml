@model ResetPasswordViewModel
@{
    Layout = "_Layout";

}
<div class="container mt-5">
    <h1 style="text-align:center; font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 18px;
        line-height: 21px;
        color: #201D1D;">
        Forgot  Password
    </h1>
    <p style="text-align: center; font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 18px;
        line-height: 21px;
        color: #000000;
        margin-top: 2%;
        ">A confirmation code will be sent by</p>
</div>


<div class="container">
    <div class="row ">
        <div class="col-md-12 bg-white p-5">
            <div class="form-style">
                <form method="post" style="margin-top: -3%;">
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />
                    <div class="form-group pb-3" style="margin-left: 20%; margin-right: 20%; width: 60%;">
                        <label style="font-family: Roboto;
       font-style: normal;
       font-weight: bold;
       font-size: 16px;
       line-height: 19px;
       color: #000000;
       margin-bottom: 2%;"> New Password </label>
                        <input asp-for="Password" type="password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>



                    <div class="form-group pb-3" style="margin-left: 20%; margin-right: 20%; width: 60%">
                        <label style="font-family: Roboto;
            font-style: normal;
            font-weight: bold;
            font-size: 16px;
            line-height: 19px;
            color: #000000;
            margin-bottom: 2%;
            ">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>


                    <div class="form-group pb-6">
                        <button type="submit" class="border"
                                style="background: #1A9D92;
    border-radius: 8px;
    margin-left: 20%;
    width: 30%;
    font-family: Roboto;
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 32px;
    text-align: center;
    color: #FFFFFF;">
                            Continue
                        </button>

                        <button  class="border" style="background: #FFFFFF;
    border-radius: 8px ;
    width: 30%;
    font-family: Roboto;
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 32px;
    text-align: center;
    color: #525252;">
                            Cancel
                        </button>
                    </div>
                </form>
                <div>
                </div>
            </div>
        </div>
    </div>
</div>

