@model LoginViewModel
@{
    ViewBag.Title = BisnicityKey.Login;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="~/css/login.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>



    <section>
        <div class="container h-100" id="container h-1000" style="margin-top: 7rem;">
            <div class="row d-flex justify-content-center align-items-center h-100" id="row d-flex justify-content-center align-items-center h-1000">
                <div class="col col-xl-10">
                    <div class="card" id="cardd">
                        <div class="row">

                            <div class="col-md-5">
                                <div class="card">
                                    <div class="card-body" style="padding: 0 !important;">
                                        <img src="~/images/login/loginn.png" class="card" alt="..." width="100%">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-7">

                                <div>
                                    <a href=@Url.Action("Index1","Home") type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="btn-closee"></a>
                                </div>

                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form method="post" asp-controller="Account" asp-action="Login">
                                        <div asp-validation-summary="All" class="text-danger"></div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example17" id="form-labell">Email</label>
                                            <input asp-for="sEmail" type="email" id="form2Example17" class="form-control form-control-lg" style="background: #F0F0F0;" />
                                            <span asp-validation-for="sEmail" class="text-danger"></span>

                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example27" id="form-labell">Password</label>
                                            <input asp-for="sPassword" type="password" id="form2Example27" class="form-control form-control-lg" style="background: #F0F0F0;" />
                                            <span asp-validation-for="sPassword" class="text-danger"></span>

                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-lg" type="submit" id="btnbtn">Login</button>
                                        </div>

                                        <div class="d-flex justify-content-around mb-4">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="form1Example3" style=" border: 2px solid #108D85;" />

                                                <label class="form-check-label" for="form1Example3" id="form-check-labell"> Remember me </label>
                                            </div>

                                            <a class="small" href=@Url.Action("ForgotPassword","Account") id="smalll"> Forgot password? </a>
                                        </div>
                                        <p class="pa">
                                            Don't have an account?
                                            <a href=@Url.Action("Register","Account") class="ab">Register here</a>
                                        </p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
