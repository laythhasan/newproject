                                </li>
                                <li class="submenu-item ">
                                    <a href=@Url.Action("SuportIdea","AdminB")>SuportIdea</a>
                                </li>
                                <li class="submenu-item ">
                                    <a href=@Url.Action("DataVocation","AdminB")>DataVocation</a>
                                </li>
                                <li class="submenu-item ">
                                    <a href=@Url.Action("DataPersonTranning","AdminB")>DataPersonTranning</a>
                                </li>
                                <li class="submenu-item ">
                                    <a href=@Url.Action("Post","AdminB")>Post</a>
                                </li>
                                <li class="submenu-item ">
