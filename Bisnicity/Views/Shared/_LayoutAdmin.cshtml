        let dataTable = new simpleDatatables.DataTable(table1);
    </script>
    <script src="~/assetsAdmin/js/main.js"></script>
    <script src="~/assetsAdmin/js/main.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/toastr.min.js"></script>
</body>
</html>

