                                </li>
                                <li class="submenu-item ">
                                    <a href=@Url.Action("CatTemp","AdminB")>Category</a>
                                </li>
                            </ul>

                        </li>
                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class="bi bi-stack"></i>
                                <span>table Person</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a href=@Url.Action("profilePerson","AdminB")>Person</a>
                                </li>
                                <li class="submenu-item ">
                                    <a href=@Url.Action("DetailsPerson","AdminB")>DetailsPerson</a>
                                </li>

                                <li class="submenu-item ">
                                    <a href=@Url.Action("SkillsPerson","AdminB")>SkillsPerson</a>
                                </li>
                                <li class="submenu-item ">
                                    <a href=@Url.Action("CatPrson","AdminB")>CategoryPerson</a>
                                </li>
                            </ul>

                            @if (sigin.IsSignedIn(User) && User.IsInRole(BisnicityKey.Admin))
                            {
                                <a href=@Url.Action("AddAdmin","AdminB") class='sidebar-link'>
                                    <i class="bi bi-person"></i>
                                    <span>Add Admin</span>
                                </a>
                                <a href=@Url.Action("AddJobAdmin","AdminB") class='sidebar-link'>
                                    <i class="bi bi-person"></i>
                                    <span>Add Job</span>
                                </a>
                                <a href=@Url.Action("CreateRole","AdminB") class='sidebar-link'>
                                    <i class="bi bi-person"></i>
                                    <span>Add Role</span>
                                </a>
                            }
                        </li>

                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class="bi bi-stack"></i>
                                <span>LeadersShip</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a href=@Url.Action("Idea","AdminB")>Idea</a>
