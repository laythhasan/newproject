@model Bisnicity.Models.CompleteprofileBusniscssViewModel
@{
    var mess = TempData["mess"] ?? string.Empty;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="~/css/login.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <section>
        <div class="container h-100" id="container h-1000" style="margin-top: 7rem;">
            <div class="row d-flex justify-content-center align-items-center h-100" id="row d-flex justify-content-center align-items-center h-1000">
                <div class="col col-xl-10">
                    <div class="card" id="cardd">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="card">
                                    <div class="card-body" style="padding: 0 !important;">
                                        <img src="~/images/login/login.png" class="card" alt="..." width="100%">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">

                                <h2 style="text-align: center; margin-top: 10%;">Complet Profile Bussince</h2>
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form asp-action="CompleteProfile" asp-controller="Business" method="post" enctype="multipart/form-data">
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example17" id="form-labell">Company Name</label>
                                            <input asp-for="CompanyName" type="text" id="form2Example17" class="form-control form-control-lg" style="background: #F0F0F0;" />
                                            <span asp-validation-for="@Model.CompanyName" class="text-danger"></span>

                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="form2Example17" id="form-labell">LinkedIn Company</label>
                                            <input asp-for="Linklinkedin" type="text" id="form2Example17" class="form-control form-control-lg" style="background: #F0F0F0;" />
                                            <span asp-validation-for="@Model.Linklinkedin" class="text-danger"></span>

                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-9">
                                                <label id="form-labell" style="margin-top: 2%;">Upload Image Profile Company</label><br>
                                                <label id="#label" for="apply">
                                                    <input asp-for="ImageProfile" type="file" name="" id="apply" accept=".png, .jpg, .jpeg" style="width: 0px; margin-top: 5%;">
                                                    <img src="~/images/uploadicon/Group 11627.png" alt="" srcset="" width="20" height="20">
                                                    <span id="pleaes"> Please Upload Your Image </span>

                                                </label>
                                                <span asp-validation-for="@Model.ImageProfile" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-lg" type="submit" id="btnbtn" style="margin-top: 5%;">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        var ss = '@mess';
        if (ss) {
            toastr.error(ss);
        }
    })
</script>



