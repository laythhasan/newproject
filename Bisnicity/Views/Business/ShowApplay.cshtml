@using Bisnicity.Models
@model IEnumerable<ShowPersonViewModel>
@{
    Layout = "_Layout";
}
<style>

    #pass {
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 22px;
        line-height: 26px;
        /* identical to box height */


        color: #000000;
    }



    .list-group a:active {
        background-color: #1A9D92;
        color: white;
    }

    #listgrop {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 19px;
        /* identical to box height */


        color: #000000;
    }

    #text {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        line-height: 24px;
        /* or 171% */


        color: #525252;
    }

    .card {
        background: #FFFFFF;
        border: 1px solid #C8E7E5;
        box-sizing: border-box;
        border-radius: 15px;
        margin-bottom: 5%;
    }

    .card-img-top {
        padding: 10px;
    }

    #card {
        background: #FFFFFF;
        border: 1px solid #EAEAEA;
        box-sizing: border-box;
        border-radius: 8px;
    }

    #h5 {
        text-align: center;
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 16px;
        line-height: 24px;
        color: #261C2C;
    }

    #p {
        text-align: center;
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        color: #818181;
    }

    #pp {
        text-align: center;
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        color: #818181;
    }

    #ppp {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        color: #818181;
    }

    #butn {
        background: #1A9D92;
        border-radius: 8px;
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 18px;
        line-height: 36px;
        text-align: center;
        color: #FFFFFF;
        width: 70%;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group" style="border-radius: 1rem;" id="listgrop">
                <a href=@Url.Action("Index","Business") class="list-group-item list-group-item-action" aria-current="true">
                    <i style="color: #1A9D92;" class="fa fa-user"></i>  My Account<i class="fas fa-user-alt"></i>
                </a>
                <a href=@Url.Action("ShowPerson","Business") class="list-group-item list-group-item-action"> <i style="color: #1A9D92;" class="fa fa-users"></i> Show Person</a>
                <a href=@Url.Action("Index","Business") class="list-group-item list-group-item-action"><img src="~/images/profile/category.png" alt="" srcset="" width="20" height="20"> Show Company Category </a>
                <a href=@Url.Action("AddJob","Business") class="list-group-item list-group-item-action"><img src="~/images/profile/jop.png" alt="" srcset="" width="20" height="20"> Add job</a>
                <a href=@Url.Action("AddPost","Business") class="list-group-item list-group-item-action"><img src="~/images/profile/post.png" alt="" srcset="" width="20" height="20"> Add Post</a>
                <a href=@Url.Action("ShowApplay","Business") class="list-group-item list-group-item-action active" style="background-color: #1A9D92;"><img src="~/images/profile/apply.png" alt="" srcset="" width="20" height="20"> Show Apply</a>

                <a href=@Url.Action("MyPost","Business") class="list-group-item list-group-item-action "><img src="~/images/profile/mypost.png" alt="" srcset="" width="20" height="20"> My Post</a>

                <a href=@Url.Action("ShowJob","Business") class="list-group-item list-group-item-action">
                    <img src="~/images/profile/company.png" alt="" srcset="" width="20" height="20"> Company Jobs
                </a>


            </div>
        </div>

        <div class="col-md-9">
            <h1 id="pass" style="margin-top: 1%;">Show Applay</h1>
            <hr>
            <div class="row">
                <div class="container">
                    <div class="row">
                        @{
                            if (Model != null)
                            {

                                foreach (var item in Model)
                                {
                                    <div class="col-md-4">

                                        <div class="card" id="card">

                                            <div class="card-body">
                                                <h5 class="card-title" id="h5">@item.jobName</h5>

                                                <p class="card-text" id="p">@item.Major</p>

                                                <p class="card-text" id="ppp"><img src="~/images/jop/email.png" style="margin-right:5%;">@item.Email</p>
                                            </div>

                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item" id="ppp"><img src="~/images/jop/phone.png" style="margin-right:5%;">@item.PhoneNo</li>

                                                <li class="list-group-item" id="ppp"><img src="~/images/jop/location.png" style="margin-right:5%;">@item.Expirence</li>
                                            </ul>

                                            <div class="card-body">
                                                <a href="#">
                                                    <svg style="background-color: #25D366; color:white;border-radius:3rem;padding:2px" xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-whatsapp" viewBox="0 0 16 16">
                                                        <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z" />
                                                    </svg> <span id="call">Call Whatsapp</span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }




                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
