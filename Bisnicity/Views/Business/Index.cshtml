@model Bisnicity.Models.BusniessViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";

    var mess = TempData["messsages"] ?? string.Empty;
}
<style>
    #text {
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 16px;
        line-height: 19px;
        color: #363636;
    }

    #text2 {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        line-height: 16px;
        color: #000000;
    }

    #pass {
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 16px;
        line-height: 19px;
        color: #000000;
    }

    #inpass {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        line-height: 16px;
        color: #A09696;
    }

    #dot {
        font-family: Nunito;
        font-style: normal;
        font-weight: normal;
        font-size: 50px;
        line-height: 48px;
        /* identical to box height */


        color: #3A3A3A;
    }

    .list-group a:active {
        background-color: #1A9D92;
        color: white;
    }

    #listgrop {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 19px;
        /* identical to box height */


        color: #000000;
    }
</style>

<div class="container" style="margin-top:6%">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group" style="border-radius: 1rem;" id="listgrop">
                <a href=@Url.Action("Index","Business") class="list-group-item list-group-item-action active" style="background-color:#1A9D92 ; color: white;" aria-current="true">
                    <i style="color: white;" class="fa fa-user"></i>  My Account
                </a>
                <a href=@Url.Action("ShowPerson","Business") class="list-group-item list-group-item-action"> <i style="color: #1A9D92;" class="fa fa-users"></i> Show Person</a>
                <a href=@Url.Action("ShowTemplete","Business") class="list-group-item list-group-item-action"><img src="~/images/profile/category.png" alt="" srcset="" width="20" height="20"> Show Company Category </a>
                <a href=@Url.Action("AddJob","Business") class="list-group-item list-group-item-action"><img src="~/images/profile/jop.png" alt="" srcset="" width="20" height="20"> Add job</a>
                <a href=@Url.Action("AddPost","Business") class="list-group-item list-group-item-action"><img src="~/images/profile/post.png" alt="" srcset="" width="20" height="20">Add Post</a>
                <a href=@Url.Action("ShowApplay","Business") class="list-group-item list-group-item-action"><img src="~/images/profile/apply.png" alt="" srcset="" width="20" height="20"> Show Apply</a>

                <a href=@Url.Action("MyPost","Business") class="list-group-item list-group-item-action"><img src="~/images/profile/mypost.png" alt="" srcset="" width="20" height="20"> My Post</a>

                <a href=@Url.Action("ShowJob","Business") class="list-group-item list-group-item-action">
                    <img src="~/images/profile/company.png" alt="" srcset="" width="20" height="20"> Company Jobs
                </a>


            </div>
        </div>
        <div class="col-md-5">
            <h1 style="font-family: Roboto;
                    font-style: normal;
                    font-weight: bold;
                    font-size: 22px;
                    line-height: 26px;
                    color: #000000;">
                Profile & Password
            </h1>
            <br>
            <h1 style="font-family: Roboto;
                    font-style: normal;
                    font-weight: bold;
                    font-size: 18px;
                    line-height: 21px;
                    background-color: #1A9D92;
                    padding: 8px;
                    color: #FFFFFF;">
                My Account
            </h1>
            <p id="text">First Name  <span style="float: right;" id="text">Last Name</span> </p>
            <p id="text2">@Model.FirstName  <span style="float: right;" id="text2">@Model.LastName</span> </p>
            <hr>
            <p id="text">Mobile Number </p>
            <p id="text2">@Model.PhoneNo</p>
            <hr>
            <p id="text">Email</p>
            <p id="text2">@Model.Email</p>
            <hr>
            <p id="text">
                Company Name
            </p>
            <p id="text2">@Model.CompanyName</p>
            <hr>
            <p id="text">Link LinkedIN </p>
            <p id="text2">@Model.Linklinkedin</p>
            <br>
            <a href=@Url.Action("EditProfile","Business")> <i  style="color: white; background-color: #1A9D92; padding: 10px; border-radius: 20px;" class="fa fa-edit"></i></a>
            <a href=@Url.Action("EditProfile","Business")> <span style="color:#1A9D92 ;"> Information </span></a>

        </div>
        <div class="col-md-4">
            <h1 id="pass" style="margin-top: 15%;">Change Password</h1>
            <hr>
            <p id="inpass">Password </p>

            <p id="dot">
                .............<span style="float: right;">
                    <a href=@Url.Action("ChangePassword","Account") type="button" class="btn btn-block" style="background-color: #1A9D92;color: white;margin: 12px;">Edit</a>
                </span>
            </p>

        </div>
    </div>
</div>
<script type="text/javascript">
        $(document).ready(function () {
            var ss = '@mess';
            if (ss) {
                toastr.success(ss);
            }
        })
</script>
