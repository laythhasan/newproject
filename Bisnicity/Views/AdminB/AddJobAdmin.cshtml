@model BisnicityApp.Entites.jobVacancy
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "AddJobAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";


}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BusnisCity Show Person</title>
    <link rel="icon" href="~/assets/images/logo-businicity.png" type="image/x-icon">
    <link href="~/css/toastr.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body style="background-image: url(../assets/images/home.jpg);">

    <section class="h-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-10">
                    <div class="card card-registration my-4">
                        <div class="row g-0">

                            <div class="col-xl-12">
                                <div class="card-body p-md-5 text-black">
                                    <nav aria-label="breadcrumb" class="main-breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item">
                                                <a class="text-dark"
                                                   href=@Url.Action("AdminPanel","AdminB")>Home</a>
                                            </li>
                                            <li class="breadcrumb-item active">
                                                <a class="text-danger">Add Job Admin</a>
                                            </li>

                                        </ol>
                                    </nav>
                                    <h3 class="mb-5 text-uppercase  text-center">Add Your Job</h3>
                                    <form asp-action="AddJobAdmin" enctype="multipart/form-data" method="post">
                                        <div>
                                          

                                            <div class="form-outline mb-4">
                                                <label class="form-label" for="form3Example8">Type Job</label>

                                                <input asp-for="JobType" type="text" id="form3Example8"
                                                       class="form-control form-control-lg" />
                                                <span asp-validation-for="@Model.JobType" class="text-danger"></span>

                                            </div>



                                            <div class="row">
                                                <div class="col-md-6 mb-4">
                                                    <div class="form-outline">
                                                        <label class="form-label" for="form3Example1m">Name Job</label>
                                                        <input asp-for="JobName" type="text" id="form3Example1m"
                                                               class="form-control form-control-lg" />
                                                        <span asp-validation-for="@Model.JobName" class="text-danger"></span>


                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-4">
                                                    <div class="form-outline">
                                                        <label class="form-label" for="form3Example1n">Email</label>
                                                        <input asp-for="Email" type="email" id="form3Example1n"
                                                               class="form-control form-control-lg" />

                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-4">
                                                    <div class="form-outline">
                                                        <label class="form-label" for="form3Example1n">Salay</label>
                                                        <input asp-for="Salary" type="text" id="form3Example1n"
                                                               class="form-control form-control-lg" />

                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-4">
                                                    <div class="form-outline">
                                                        <label class="form-label" for="form3Example1n">Phone No</label>
                                                        <input asp-for="PhoneNo" type="tel" id="form3Example1n"
                                                               class="form-control form-control-lg" />

                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-4">
                                                    <div class="form-outline">
                                                        <label class="form-label" for="form3Example1n">Company name</label>
                                                        <input asp-for="CompanyName" type="text" id="form3Example1n"
                                                               class="form-control form-control-lg" />

                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-4">
                                                    <div class="form-outline">
                                                        <label class="form-label" for="form3Example1n">LinkedIn</label>
                                                        <input asp-for="LinkkedIn" type="url" id="form3Example1n"
                                                               class="form-control form-control-lg" />

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="form3Example1n1">Address</label>
                                                    <input asp-for="Address" type="text" id="form3Example1n1"
                                                           class="form-control form-control-lg" />

                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="form3Example1n1">Requirements</label>
                                                    <input asp-for="Requirements" type="text" id="form3Example1n1"
                                                           class="form-control form-control-lg" />

                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="form3Example1n1">Experience</label>
                                                    <input asp-for="Experience" type="text" id="form3Example1n1"
                                                           class="form-control form-control-lg" />

                                                </div>
                                            </div>
                                            <input type="submit" value=" Add Job" class="btn btn-lg text-white" style="background-color: #178b90;" />
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/script.js"></script>
</body>

</html>


