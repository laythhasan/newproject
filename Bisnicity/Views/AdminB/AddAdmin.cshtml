@model RegiseterViewModel
@{
}
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="AdminB" asp-action="AddAdmin" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.sRoles)
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="sEmail"></label>
                <input asp-for="sEmail" class="form-control" />
                <span asp-validation-for="sEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sPassword"></label>
                <input asp-for="sPassword" class="form-control" />
                <span asp-validation-for="sPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sConfirmPassword"></label>
                <input asp-for="sConfirmPassword" class="form-control" />
                <span asp-validation-for="sConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sFirstname"></label>
                <input asp-for="sFirstname" class="form-control" />
                <span asp-validation-for="sFirstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sLastname"></label>
                <input asp-for="sLastname" class="form-control" />
                <span asp-validation-for="sLastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sPhone"></label>
                <input asp-for="sPhone" class="form-control" />
                <span asp-validation-for="sPhone" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label class="label">Roles</label>
                <select asp-for="sRoles" id="RolesValue" class="form-control"
                        asp-items="@(new SelectList(Model.Roles, "Id", "Name"))">
                </select>
                <span asp-validation-for="sRoles" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#RolesValue").change(function () {
            var value = $("#RolesValue option:selected");
            $("#sRoles").val(value.text());
        });
    });
</script>
