@model IEnumerable<BisnicityApp.Entites.Idea>
@using Infrastrucer.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> sigin;
@{
    ViewData["Title"] = "Idea";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Idea</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ideaname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descreption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phoneno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fileidea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeIdea)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ideaname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descreption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneno)
            </td>
            <td>
                <img src=~/UploadsFileIdea/@item.Fileidea
                     style="width:64px"
                     asp-append-version="true" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeIdea.NameType)
            </td>
            @if (sigin.IsSignedIn(User) && User.IsInRole(BisnicityKey.Admin))
            {
                <td>
                    <a href=@Url.Action("DeleteIdea","AdminB", new { id = item.IdeaID }) class="badge bg-danger deletehover">Delete</a>

                </td>
            }
            </tr>
        }
    </tbody>
</table>
