@model IEnumerable<Bisnicity.Models.InfoDTO>
@using Infrastrucer.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> sigin;
@{
    ViewData["Title"] = "OurServiceAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>OurService</h3>
                <!-- <p class="text-subtitle text-muted">For user to check they list</p> -->
            </div>

        </div>
    </div>
    <section class="section">
        <div class="card">

            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>AboutServ</th>
                            <th>AboutUs</th>
                            <th>City</th>
                            <th>Country</th>
                            <th>LinkFace</th>
                            <th>LinkTwet</th>
                            <th>LinkInsta</th>
                            <th>LinkWats</th>
                            <th>GoogleMapLink</th>
                            <th>DomainName</th>
                            <th>FirstName</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.OurServicesID)</td>
                            <td>@Html.DisplayFor(modelItem => item.AbuotServ)</td>
                            <td>@Html.DisplayFor(modelItem => item.AboutUs)</td>
                            <td>@Html.DisplayFor(modelItem => item.City)</td>
                            <td>@Html.DisplayFor(modelItem => item.Country)</td>
                            <td>@Html.DisplayFor(modelItem => item.LinkFace)</td>
                            <td>@Html.DisplayFor(modelItem => item.LinkTwet)</td>
                            <td>@Html.DisplayFor(modelItem => item.LinkInsta)</td>
                            <td>@Html.DisplayFor(modelItem => item.LinkWats)</td>
                            <td>@Html.DisplayFor(modelItem => item.GoogleMapLink)</td>
                            <td>@Html.DisplayFor(modelItem => item.DomainName)</td>
                            <td> @Html.DisplayFor(modelItem => item.sFirstname)</td>
                            <td> @Html.DisplayFor(modelItem => item.Email)</td>
                            @if (sigin.IsSignedIn(User) && User.IsInRole(BisnicityKey.Admin))
                            {
                                <td>
                                    <a href=@Url.Action("Editourserv", "AdminB", new { id = item.OurServicesID }) class="badge bg-success edithover">Edit</a>
                                    <a href=@Url.Action("Deleteinfo", "AdminB", new { id = item.OurServicesID }) class="badge bg-danger deletehover">Delete</a>
                                </td>
                            }
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>