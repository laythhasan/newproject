@model IEnumerable<Bisnicity.Models.InfoDTO>
@using Infrastrucer.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> sigin;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "HomeAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Info</h3>
            </div>

        </div>
    </div>
    <section class="section">
        <div class="card">

            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>#</th>

                            <th>CompanyName</th>
                            <th>Linked In</th>
                            <th>ImageProfile</th>
                            <th>sFirstname</th>
                            <th>sLastname</th>
                            <th>Email</th>
                            <th>Acions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.InfoID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Linklinkedin)
                            </td>
                            <td>
                                <img src=~/ProfilImage/@item.ImageProfile
                                     style="width:64px"
                                     asp-append-version="true" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sFirstname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sLastname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            @if (sigin.IsSignedIn(User) && User.IsInRole(BisnicityKey.Admin))
                            {
                                <td>
                                    <a href=@Url.Action("Editinfo","AdminB" ,new {id=item.InfoID }) class="badge bg-success edithover">Edit</a>


                                    <a href=@Url.Action("Deleteinfo","AdminB" ,new {id=item.InfoID }) class="badge bg-danger deletehover">Delete</a>
                                </td>
                            }

                        </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>

