@model Bisnicity.Models.ProjectRole
@{ 
    ViewBag.Title = BisnicityKey.Addrole;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-heading container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Add Role By Admin</h3>
            </div>
        </div>
    </div>
    <section class="section">
        <form class="row g-3 needs-validation" asp-action="CreateRole" asp-controller="AdminB" enctype="multipart/form-data" method="post" novalidate>
            <div class="col-md-8">
                <label class="form-label">Role Name</label>
                <input type="text" asp-for="@Model.RoleName" class="form-control" />
            </div>
          
            <div class="col-12">
                <button class="btn btn-success" type="submit">Add Role</button>
            </div>
        </form>

    </section>
</div>


