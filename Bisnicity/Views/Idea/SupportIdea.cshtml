@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Bisnicity.Models.SupportIdeaViewModel

@{
    var mess = TempData["Message"] ?? string.Empty;

}
<style>

    #pass {
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 22px;
        line-height: 26px;
        color: #000000;
    }

    .list-group a:active {
        background-color: #1A9D92;
        color: white;
    }

    #listgrop {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 19px;
        color: #000000;
    }

    #text {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        line-height: 24px;
        color: #525252;
    }

    .card {
        background: #FFFFFF;
        border: 1px solid #C8E7E5;
        box-sizing: border-box;
        border-radius: 15px;
        margin-bottom: 5%;
    }

    .card-img-top {
        padding: 10px;
    }

    #input {
        background: #FFFFFF;
        border: 1px solid #E8E8E8;
        box-sizing: border-box;
        border-radius: 8px;
        height: 53px;
    }

    #label {
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 22px;
        line-height: 26px;
        color: #000000;
    }

    #labell {
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 16px;
        line-height: 19px;
        color: #363636;
    }

    #btn {
        background: #1A9D92;
        border-radius: 8px;
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 20px;
        line-height: 32px;
        text-align: center;
        color: #FFFFFF;
        width: 177px;
    }

    #input {
        background: #FFFFFF;
        border: 1px solid #E8E8E8;
        box-sizing: border-box;
        border-radius: 8px;
    }

    #pleaes {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 13px;
        line-height: 18px;
        align-items: center;
        text-align: right;
        color: rgba(60, 60, 67, 0.6);
    }

    #che {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 20px;
        line-height: 32px;
        text-align: center;
        color: #707070;
    }
</style>
<div class="container" style="margin-top: 5%;">
    <div class="row">
        <div class="col-md-9">
            <h1 id="pass" style="margin-top: 1%;">Add Idea</h1>
            <hr>
            <form asp-action="SupportIdea" asp-controller="Idea" enctype="multipart/form-data" method="post">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label id="labell" for="inputEmail4">CompanyName</label>
                        <input asp-for="CompanyName" type="text" class="form-control" id="input">
                        <span asp-validation-for="CompanyName" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label id="labell" for="inputEmail4">TargetSector</label>
                        <select asp-for="targetsecid" class="form-control"
                                asp-items="@(new SelectList(Model.Targetsectors,"TargetsectorID","namesector"))"></select>
                        <span asp-validation-for="targetsecid" class="text-danger"></span>

                    </div>
                    <div class="form-group col-md-6">
                        <label id="labell" for="inputEmail4"> TypeCompany </label>
                        <select asp-for="typecompid" class="form-control"
                                asp-items="@(new SelectList(Model.TypeCompanys,"TypeCompanyID","Typename"))"></select>
                        <span asp-validation-for="typecompid" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label id="labell">licensed up to</label><br>
                        <label id="#label" for="apply">
                            <input asp-for="Filelicense" type="file" name="" id="apply" accept=".png, .jpg, .jpeg" style="width: 0px;">
                            <img src="~/images/uploadicon/Group 11627.png" alt="" srcset="" width="20" height="20">
                            <span id="pleaes"> Please Upload Your Picture </span>
                        </label>
                    </div>
                    <div class="form-group col-md-6">
                        <label id="labell">Commercial Record</label><br>
                        <label id="#label" for="apply">
                            <input asp-for="Filerecord" type="file" name="" id="apply" accept=".png, .jpg, .jpeg" style="width: 0px;">
                            <img src="~/images/uploadicon/Group 11627.png" alt="" srcset="" width="20" height="20">
                            <span id="pleaes"> Please Upload Your Picture </span>
                        </label>
                    </div>
                    //Certificate of Registration
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label id="labell">CertificateOfRegistration</label><br>
                        <label id="#label" for="apply">
                            <input asp-for="Filecrt" type="file" name="" id="apply" accept=".png, .jpg, .jpeg" style="width: 0px;">
                            <img src="~/images/uploadicon/Group 11627.png" alt="" srcset="" width="20" height="20">
                            <span id="pleaes"> Please Upload Your Picture </span>
                        </label>
                    </div>
                </div>


                <br><br>
                <button type="submit" class="btn btn-block" id="btn">Send</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>